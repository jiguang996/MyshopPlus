<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.dao.IUserDao">
    <!--配置查询标签-->
    <select id="findAll" resultType="com.itheima.model.User">
        select * from user ;
    </select>

    <select id="saveUser" resultType="com.itheima.model.User">
        insert  into user(username,date,sex,address) values (#{username},#{date},#{sex},#{address});
    </select>

    <select id="updateUser" resultType="com.itheima.model.User">
        update user set username=#{username},date=#{date},sex=#{sex},address=#{address} where id=#{id};
    </select>

    <select id="deleteUser" resultType="com.itheima.model.User">
        delete  from user where  id=#{id};
    </select>
    <select id="findUserByID" resultType="com.itheima.model.User">
        select * from user where  id=#{id};
    </select>

    <select id="findByUsername" resultType="com.itheima.model.User">
        select * from user where username like #{username};
    </select>
    <select id="findByVo" parameterType="com.itheima.model.QueryVo" resultType="com.itheima.model.User">
        select * from user where username like #{user.username};
    </select>

</mapper>